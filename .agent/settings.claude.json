{
  "profile": "claude",
  "safe_commands_reference": ".agent/instructions/rules/04-safe-commands.md",
  "permissions": {
    "allow": [
      "ls",
      "find",
      "tree",
      "cat",
      "head",
      "tail",
      "wc",
      "stat",
      "file",
      "mkdir",
      "touch",
      "mv",
      "cp",
      "rm",
      "grep",
      "rg",
      "sed",
      "awk",
      "sort",
      "uniq",
      "jq",
      "curl http://localhost:*",
      "curl http://127.0.0.1:*",
      "curl http://0.0.0.0:*",
      "curl https://api.github.com*",
      "uv",
      "uvx",
      "pip list",
      "pip show",
      "npm",
      "npx",
      "pnpm",
      "bun",
      "go build",
      "go test",
      "go mod",
      "go run",
      "cargo build",
      "cargo test",
      "cargo run",
      "cargo check",
      "make",
      "task",
      "just",
      "pytest",
      "vitest",
      "jest",
      "ruff",
      "eslint",
      "prettier",
      "ty",
      "mypy",
      "git status",
      "git diff",
      "git log",
      "git branch",
      "git add",
      "git commit",
      "git push",
      "git pull",
      "cd",
      "pwd",
      "echo",
      "sleep",
      "date",
      "env",
      "which"
    ],
    "deny": [
      "sudo",
      "su",
      "chmod 777",
      "rm -rf /",
      "passwd",
      "useradd",
      "chown root",
      "shutdown",
      "reboot"
    ]
  }
}
